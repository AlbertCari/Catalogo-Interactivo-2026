  <script>
    // Utilidad: abrir/cerrar modal de forma accesible
    const modal = document.getElementById('modal');
    const modalTitle = document.getElementById('modal-title');
    const modalBody = document.getElementById('modal-body');
    const closeBtn = modal.querySelector('.close');

    const contenidos = {
      presentacion: `
        <p><strong>Bienvenido(a) al Catálogo 2021.</strong> Aquí puedes explorar nuestras líneas editoriales,
        metodología por competencias y novedades del año.</p>
        <ul>
          <li>Visión general del grupo editorial</li>
          <li>Metodología y enfoque</li>
          <li>Casos de éxito y adopciones</li>
        </ul>
        <p><a href="#!" target="_blank" rel="noopener">Ver presentación completa</a></p>
      `,
      inicial: `
        <p>Recursos para educación <strong>Inicial</strong> (3–5 años).</p>
        <p>Material manipulativo, proyectos por competencias, guías didácticas y recursos digitales.</p>
        <p><a href="#!" target="_blank" rel="noopener">Descargar muestrario</a></p>
      `,
      primaria: `
        <p>Colecciones para <strong>Primaria</strong>: Comunicación, Matemática, Ciencia, Personal Social, Arte.</p>
        <p>Libro del estudiante, cuaderno de trabajo, guía docente y evaluaciones.</p>
        <p><a href="#!" target="_blank" rel="noopener">Ver catálogo de primaria</a></p>
      `,
      secundaria: `
        <p>Series para <strong>Secundaria</strong> con enfoque competencial y proyectos interdisciplinarios.</p>
        <p>Incluye recursos digitales, rúbricas y banco de ítems.</p>
        <p><a href="#!" target="_blank" rel="noopener">Abrir fichas por área</a></p>
      `,
      material: `
        <p><strong>Material didáctico</strong> y kits para aula: tangram, geoformas, laboratorio básico, etc.</p>
        <p>Listas por grados, packs por escuela y compras mayoristas.</p>
        <p><a href="#!" target="_blank" rel="noopener">Solicitar cotización</a></p>
      `,
      plataforma: `
        <p>Conoce la <strong>Plataforma virtual</strong>: contenidos interactivos, seguimiento docente,
        analíticas y evaluaciones.</p>
        <p>Integración con Google Classroom y Moodle.</p>
        <p><a href="#!" target="_blank" rel="noopener">Pedir demo</a></p>
      `
    };

    function openModal(key, titulo){
      modalTitle.textContent = titulo || 'Detalle';
      modalBody.innerHTML = contenidos[key] || '<p>Contenido próximamente…</p>';
      modal.setAttribute('aria-hidden','false');
      // Bloquear scroll detrás del modal
      document.documentElement.style.overflow = 'hidden';
      // Enfocar botón de cierre para accesibilidad
      closeBtn.focus();
    }
    function closeModal(){
      modal.setAttribute('aria-hidden','true');
      document.documentElement.style.overflow = '';
    }

    // Cerrar con botón, backdrop o tecla ESC
    closeBtn.addEventListener('click', closeModal);
    modal.addEventListener('click', (e)=>{ if(e.target === modal) closeModal(); });
    window.addEventListener('keydown', (e)=>{ if(e.key === 'Escape' && modal.getAttribute('aria-hidden')==='false') closeModal(); });

    // Delegación de eventos para los botones del menú
    document.querySelector('.menu').addEventListener('click', (e)=>{
      const btn = e.target.closest('button[data-item]');
      if(!btn) return;

      // OPCIÓN A: abrir modal (por defecto)
      const key = btn.getAttribute('data-item');
      const titulo = btn.getAttribute('data-modal-title');
      openModal(key, titulo);

      // OPCIÓN B: ir a URL externa (descomenta y edita si deseas)
      // const urlPorItem = { primaria: 'https://tu-dominio/primaria.html', ... };
      // if(urlPorItem[key]) window.location.href = urlPorItem[key];

      // OPCIÓN C: navegar a otra sección interna (#id) si tu catálogo es multipágina en un mismo HTML.
    });
  </script>
